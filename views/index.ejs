<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatterverse</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div id="wrapper">
        <h1>Chatterverse</h1>
        <table id="rooms-list">
            <tr>
                <th>Room Name</th>
                <th>Users in Room</th>
                <th>Join Room</th>
            </tr>
            <% rooms.forEach(room => { %>
                <tr class="room">
                    <td><h2><%= room.name %></h2></td>
                    <td><p>Users: <%= room.users.length %></p></td>
                    <td><form action="/join-room" method="POST">
                        <input type="hidden" value="<%= room.name %>" name="roomName">
                        <button type="submit">Join</button>
                    </form></td>
                </tr>
            <% }) %>
        </table>
        <form id="room-form" action="/create-room" method="POST">
            <input type="text" placeholder="Enter room name" name="roomName" required>
            <button type="submit">Create</button>
        </form>
    </div>
</body>
</html>